root = true

[*]
end_of_line = lf
insert_final_newline = true

[*.py]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
trim_trailing_whitespace = true

[*.md]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false

[*.html]
indent_style = space
indent_size = 2

[*.{css,sass,scss}]
indent_style = space
indent_size = 2

[*.{yaml,yml}]
indent_style = space
indent_size = 2
